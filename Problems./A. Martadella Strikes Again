void Usif() {
// The Martadella  is a cri;
// The Shahhoud -> radius is R && Saeed -> radius is r;
// print 1 if shahhous is larger than the saeed else print 2;
          
    int T;
    cin >> T;

    while (T--) {
        long long R, r;
        cin >> R >> r;

        if (R * R > 2LL * r * r)
            cout << "1\n";
        else
            cout << "2\n";
    }
}

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);
    Usif();
    return 0;
}

